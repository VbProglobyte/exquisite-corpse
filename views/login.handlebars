<!--Page where user will either sign up or login.-->

<div class='row'>
  <div class='col-md-6'>
    <h2 class='login-copy'>Log In</h2>

    <form class='form login-form'>
      <div class='form-group'>
        <label for='email-login' class='login-copy'>Email:</label>
        <input class='form-input' type='text' id='email-login' />
      </div>
      <div class='form-group'>
        <label for='password-login' class='login-copy'>Password:</label>
        <input class='form-input' type='password' id='password-login' />
      </div>
      <div class='form-group'>
        <button class='btn btn-primary' type='submit'>Log In</button>
      </div>
    </form>
  </div>
  <div class='col-md-6'>
    <h2 class='login-copy'>Or Sign Up</h2>

    <form class='form signup-form'>
      <div class='form-group'>
        <label for='name-signup' class='login-copy'>name:</label>
        <input class='form-input' type='text' id='name-signup' />
      </div>
      <div class='form-group'>
        <label for='email-signup' class='login-copy'>email:</label>
        <input class='form-input' type='text' id='email-signup' />
      </div>
      <div class='form-group'>
        <label for='password-signup' class='login-copy'>password:</label>
        <input class='form-input' type='password' id='password-signup' />
      </div>
      <div class='form-group'>
        <button class='btn btn-primary' type='submit'>Sign Up</button>
      </div>
    </form>
  </div>
</div>

<script src='./js/login.js'></script>